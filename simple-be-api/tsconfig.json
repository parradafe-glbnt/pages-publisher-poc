{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["esnext"],
      "allowJs": false,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "ESNext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "incremental": true,
      "rootDir": "src/",
      "baseUrl": "src/",
      "outDir": "./dist"
    },
    "ts-node": {
        "esm": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }
  